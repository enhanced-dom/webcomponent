{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2018",
    "baseUrl": "./",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "preserveConstEnums" : true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "sourceRoot": "./",
    "inlineSources": true
  },
  "include": [
    "src/**/*.ts",
  ]
}